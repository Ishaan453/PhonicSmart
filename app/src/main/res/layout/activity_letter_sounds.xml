<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ace5ee"
    tools:context=".LetterSounds">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left|center">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/Heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Aa"
                    android:fontFamily="@font/sassoon_primary"
                    android:textColor="#ff0000"
                    android:textSize="80sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click here to hear the sound"
                android:fontFamily="@font/im_fell_dw_pica"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:textColor="#ffa07a"
                android:gravity="center"
                android:padding="5dp"/>


        <LinearLayout
            android:id="@+id/soundBtnLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/hear_sound_bg">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_speaker_phone_24"/>

            <TextView
                android:id="@+id/SoundBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sassoon_primary"
                android:paddingRight="7dp"
                android:text="Aa"
                android:textColor="#ffc40c"
                android:textSize="60sp" />

        </LinearLayout>


            <LinearLayout
                android:id="@+id/SongPlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/song_bg">


                <TextView
                    android:id="@+id/song"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="/a/ /a/ ants on my arm"
                    android:fontFamily="@font/sassoon_primary"
                    android:textColor="@color/white"
                    android:paddingLeft="2dp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ants_on_my_arm_boy"
                    android:paddingRight="10dp"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here are some words"
                android:fontFamily="@font/im_fell_dw_pica"
                android:layout_marginTop="40dp"
                android:textSize="35sp"
                android:textColor="#ff9933"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/word1"
                android:fontFamily="@font/sassoon_primary"
                android:layout_width="130dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="ant"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:textColor="#228b22"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/word2"
                android:fontFamily="@font/sassoon_primary"
                android:layout_width="130dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="pan"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:textColor="#228b22"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/word3"
                android:fontFamily="@font/sassoon_primary"
                android:layout_width="130dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="mat"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:textColor="#228b22"
                android:padding="10dp"/>

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/word4"
                    android:layout_width="130dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="man"
                    android:fontFamily="@font/sassoon_primary"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:textColor="#228b22"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/word5"
                    android:layout_width="130dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="cat"
                    android:fontFamily="@font/sassoon_primary"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:textColor="#228b22"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/word6"
                    android:layout_width="130dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="can"
                    android:fontFamily="@font/sassoon_primary"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:textColor="#228b22"
                    android:padding="10dp"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>